{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable",
            "cargo": {
                "args": [
                    "build",
                    "--bin=hydrogen",
                    "--package=hydrogen"
                ],
                "filter": {
                    "name": "hydrogen",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "HYDROGEN_LANGUAGE_PATH": "${workspaceFolder}/assets/langs",
                "RUST_LOG": "hydrogen=debug"
            },
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=hydrogen",
                    "--package=hydrogen"
                ],
                "filter": {
                    "name": "hydrogen",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "HYDROGEN_LANGUAGE_PATH": "${workspaceFolder}/assets/langs",
                "RUST_LOG": "hydrogen=debug"
            },
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}